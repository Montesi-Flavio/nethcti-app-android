<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Will migrate -->
    <color name="neth_white_color">#fafafa</color>
    <color name="neth_light_grey_color">#e6e6e6</color>
    <color name="neth_grey_color">#494949</color>
    <color name="neth_grey_text_color">#606060</color>
    <color name="neth_dark_grey">#212121</color>

    <color name="neth_blue_color">#00a2de</color>
    <color name="neth_light_blue_color">#62d3ff</color>
    <color name="neth_dark_blue_color">#0073ac</color>

    <!-- The base font -->
    <style name="neth_small_font" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="neth_medium_font" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="neth_title_font" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="neth_field_header_font" parent="neth_medium_font">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Panels -->
    <style name="neth_base_panel">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="neth_field_container_panel" parent="neth_base_panel">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <!-- Buttons -->
    <style name="neth_primary_button_font" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/neth_blue_color</item>
    </style>

    <style name="neth_secondary_button_font" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/neth_blue_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="strokeColor">@color/neth_blue_color</item>
    </style>

    <!-- Text fields -->
    <style name="neth_primary_text_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="backgroundColor">@color/neth_blue_color</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="boxStrokeColor">@color/neth_light_blue_color</item>
        <item name="colorControlNormal">?attr/backgroundColor</item>
        <item name="colorControlActivated">@color/neth_light_blue_color</item>
        <item name="android:colorControlHighlight">@color/neth_light_blue_color</item>
    </style>

    <style name="neth_primary_text_layout_theme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/neth_light_blue_color</item>
        <item name="colorControlActivated">@color/neth_light_blue_color</item>
        <item name="android:colorControlHighlight">@color/neth_light_blue_color</item>
    </style>
</resources>