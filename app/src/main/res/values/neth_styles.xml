<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Will migrate -->
    <color name="neth_light_grey_color">#e6e6e6</color>
    <color name="neth_grey_color">#494949</color>
    <color name="neth_grey_text_color">#606060</color>
    <color name="neth_light_blue_color">#00a2de</color>
    <color name="neth_footer_btn_color">#e6e6e6</color>
    <color name="neth_toolbar_color">#e6e6e6</color>

    <!-- The base font -->
    <style name="neth_base_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="neth_small_font" parent="neth_base_font">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neth_grey_text_color</item>
    </style>

    <style name="neth_medium_font" parent="neth_base_font">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/neth_grey_text_color</item>
    </style>

    <style name="neth_title_font" parent="neth_base_font">
        <item name="android:textColor">@color/neth_light_blue_color</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="neth_field_header_font" parent="neth_medium_font">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Panels -->
    <style name="neth_base_panel">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/neth_light_grey_color</item>
    </style>

    <style name="neth_field_container_panel" parent="neth_base_panel">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <!-- Buttons -->
    <style name="neth_primary_button_font" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/neth_light_blue_color</item>
    </style>

    <style name="neth_secondary_button_font" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/neth_light_blue_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="strokeColor">@color/neth_light_blue_color</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <!-- Text fields -->
    <style name="neth_primary_text_fields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>
</resources>